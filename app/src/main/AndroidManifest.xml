<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.movie.mymovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_loadingmenu"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/AppTheme.NoActionBar">>

    <activity android:name=".LoadingMenu"
        android:screenOrientation="portrait">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name=".MainActivity"
        android:label="@string/app_name">
    </activity>

    <activity
            android:name=".SerieActivity"
            android:label="MyMovie">
    </activity>

     <activity
            android:name=".DetailActivity.MovieDetailActivity"
            android:label="MyMovie">
     </activity>

     <activity
            android:name=".DetailActivity.TvDetailActivity"
            android:label="MyMovie">
     </activity>

     <activity
            android:name=".Favoris"
            android:label="MyMovie">
     </activity>

    </application>
</manifest>
